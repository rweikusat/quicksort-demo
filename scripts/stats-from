#!/usr/bin/perl
#
# collect some simple stats from an input file
#

my (@vs, $avg, $min, $max, $sum);

$_ = <STDIN>;
chomp;
$min = $max = $sum = $_;
push(@vs, $_);

while (<STDIN>) {
    chomp;

    $sum += $_;
    $min = $_ if $_ < $min;
    $max = $_ if $_ > $max;
    push(@vs, $_);
}

$avg = int($sum / @vs);
printf("avg %u\n", $avg);
printf("max %u\n", $max);
printf("min %u\n", $min);

@vs = sort {$a <=> $b} (@vs);
printf("median %u\n", $vs[@vs / 2]);
